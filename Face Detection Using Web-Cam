#Video Detection
import cv2

cap = cv2.VideoCapture(0)# THIS IS MY WEBCAM
classifier=cv2.CascadeClassifier(r"C:\Users\HP\Desktop\Face recognisation\haarcascade_frontalface_alt.xml")

while True:

    ret, frame = cap.read()#HERE IS AM SIMPLY READING FROM MY WEBCAM

    if ret:
        faces = classifier.detectMultiScale(frame)

        for face in faces:
            x, y, w, h = face
            frame = cv2.rectangle(frame, (x, y), (x + w, y + h), (0, 0, 255), 4)# Plotting a rectangular shape box around Image

        cv2.imshow("My window", frame)

    key = cv2.waitKey(1)

    if key == ord("q"):
        break

cap.release()
cv2.destroyAllWindows()
